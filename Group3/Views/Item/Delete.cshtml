@model Lib.ItemMst

@{
    ViewData["Title"] = "Delete";
    Layout = "_BackendLayout";
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    @await Html.PartialAsync("~/Views/Backend/_Aside.cshtml")

    <div class="body-wrapper">

        @await Html.PartialAsync("~/Views/Backend/_Header.cshtml")

        <!-- Change this content if you need to modify -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Delete Item</h5>
                    <form asp-action="Delete" asp-controller="Item" method="post">
                        <!-- Display item properties for confirmation -->
                        <div class="form-group">
                            <label for="Style_Code">Style Code</label>
                            <p class="form-control-static">@Model.Style_Code</p>
                            <input type="hidden" id="Style_Code" name="styleCode" value="@Model.Style_Code">
                        </div>
                        <!-- Add more form fields for other properties -->
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- End change -->

    </div>
</div>
